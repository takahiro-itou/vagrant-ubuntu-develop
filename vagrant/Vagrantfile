##  -*-  coding: utf-8; mode: ruby -*-  ##
##  vi: set ft=ruby

Vagrant.configure("2") do |config|
  config.vm.box = "takahiro-itou/ubuntu-jammy64-develop"

  config.vm.provider "virtualbox" do |v|
    v.name   = "vagrant-ubuntu-develop"
    v.memory = "3072"
    v.gui    = false
  end

  config.vm.network(:forwarded_port, guest: 22, host: 11022, id: "ssh")
  config.vm.network("private_network", ip: "192.168.33.10")
  config.vm.synced_folder(".", "/vagrant", disabled: true)
end

load  File.expand_path('common/CommonCustomize.rb')

$disk_image_file = './disk/ubuntu-develop-sdc.vdi'
load  File.expand_path('common/AttachNewhdd.rb')

# Provisioning(s)
load  File.expand_path('common/UploadFiles.rb')
load  File.expand_path('common/Setup-Ubuntu.rb')
load  File.expand_path('common/RamDisk.rb')

Vagrant.configure("2") do |config|
  config.vm.provision("user", type: "shell",
                      path: "common/provision/user.sh",
                      privileged: false)
  config.vm.provision("hguser", type: "shell",
                      path: "common/provision/hguser.sh",
                      privileged: false)
end
